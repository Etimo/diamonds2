{
  "name": "@etimo/diamonds2-backend",
  "exports": "./mod.ts",
  "tasks": {
    "start": "deno run --watch -A src/main.ts",
    "postinstall": "deno run -A npm:prisma generate",
    "start:dev": "deno run postinstall && deno run start",
    "start:debug": "nest start --debug --watch",
    "db:push": "deno run -A npm:prisma db push",
    "db:seed": "deno run -A npm:prisma db seed",
    "start:prod": "deno run -A src/main.ts",
    "env": "cp .env.defaults .env",
    "lint": "deno lint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "imports": {
    "#prisma/client": "./prisma/client.ts",
    "@std/assert": "jsr:@std/assert@1",
    "@nestjs/common": "npm:@nestjs/common@^10.4.6",
    "@nestjs/config": "npm:@nestjs/config@^3.3.0",
    "@nestjs/core": "npm:@nestjs/core@^10.4.6",
    "@nestjs/platform-express": "npm:@nestjs/platform-express@^10.4.6",
    "@nestjs/swagger": "npm:@nestjs/swagger@^7.4.2",
    "@nestjs/terminus": "npm:@nestjs/terminus@^10.2.3"
  }
}
