{
  "watch": ["packages/**/src/**"],
  "ext": "ts,json,yml,tsx",
  "ignore": [
    "**/dist/**",
    "**/build/**",
    "**/*.spec.ts",
    "**/*.tsconfig.*",
    "**/tsconfig.*buildinfo",
    "packages/backend/dist/main.js"
  ],
  "exec": "npm run build && touch packages/backend/dist/main.js",
  "verbose": true
}
