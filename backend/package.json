{
  "name": "diamonds-ts-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "yarn run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "yarn run typeorm migration:generate -n",
    "typeorm:migration:run": "yarn run typeorm migration:run",
    "start:dev:db:seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts"
  },
  "dependencies": {
    "@digikare/nestjs-prom": "^0.2.2",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-fastify": "^6.1.1",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.2.0",
    "@types/node": "^10.17.26",
    "async": "^3.1.0",
    "bcrypt": "^5.0.0",
    "chalk": "^2.4.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "compression": "^1.7.4",
    "coveralls": "^3.0.8",
    "dotenv": "^8.2.0",
    "fastify-swagger": "^2.3.2",
    "loglevel": "^1.6.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "nest": "^0.1.6",
    "pg": "^7.14.0",
    "prom-client": "^12.0.0",
    "prometheus-api-metrics": "^2.2.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.0",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "ts-loader": "6",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.7.0",
    "typeorm": "^0.2.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.12.2",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.13",
    "@types/loglevel": "^1.5.4",
    "@types/pino": "^5.8.7",
    "@types/supertest": "^2.0.7",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "precise-commits": "^1.0.2",
    "prettier": "^1.15.3",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "5.18.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/errors/",
      "<rootDir>/models/",
      "<rootDir>/enums/",
      "<rootDir>/migration/",
      "<rootDir>/config/",
      "<rootDir>/scripts/",
      "<rootDir>/interceptors/",
      "<rootDir>/db/"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
